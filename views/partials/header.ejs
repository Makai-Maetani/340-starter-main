<header class="header">
  <h1>CSE Motors</h1>

  <% if (typeof account !== 'undefined' && account) { %>
    <div class="account-info">
      <% if (account.type === 'Employee') { %>
        <h2>EMPLOYEE - <%= account.firstName %></h2>
      <% } else if (account.type === 'Admin') { %>
        <h2>ADMIN - <%= account.firstName %></h2>
      <% } else { %>
        Welcome, <%= account.firstName %>
      <% } %> |
      <a href="/update">Account Management</a> |
      <a href="/logout">Logout</a>
    </div>
  <% } else { %>
    <div class="account-info">
      <a href="/login">My Account</a>
    </div>
  <% } %>
</header>
