<% title = "Vehicle Maintenance" %>

<h1>Vehicle Maintenance</h1>

<div style="margin-bottom: 20px;">
  <a href="/classification/add" class="btn">Add Classification</a>
  <a href="/inventory/add" class="btn">Add Vehicle</a>
</div>

<h2>Edit or Delete Existing Vehicles</h2>

<% if (vehicles.length === 0) { %>
  <p>No vehicles in inventory.</p>
<% } else { %>
  <div class="vehicle-grid">
    <% vehicles.forEach(vehicle => { %>
      <div class="vehicle-card">
        <img src="<%= vehicle.inv_thumbnail %>" alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>">
        <h3><%= vehicle.inv_make %> <%= vehicle.inv_model %></h3>
        <p>Year: <%= vehicle.inv_year %></p>
        <p>Price: $<%= vehicle.inv_price.toLocaleString() %></p>

        <div class="action-buttons">
          <a href="/inventory/edit/<%= vehicle.inv_id %>" class="btn">Edit</a>
          <form action="/inventory/delete/<%= vehicle.inv_id %>" method="POST" style="flex: 1;">
            <button type="submit" class="btn btn-delete">Delete</button>
          </form>
        </div>

      </div>
    <% }) %>
  </div>
<% } %>
