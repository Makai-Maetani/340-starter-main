<% title = "Inventory" %>

<h1>Vehicle Inventory</h1>

<% if (vehicles.length === 0) { %>
  <p>No vehicles found.</p>
<% } else { %>
  <ul>
    <% vehicles.forEach(vehicle => { %>
      <li>
        <a href="/inv/detail/<%= vehicle.inv_id %>">
          <%= vehicle.inv_make %> <%= vehicle.inv_model %> - $<%= vehicle.inv_price %>
        </a>
      </li>
    <% }) %>
  </ul>
<% } %>
