<% title = "Edit Vehicle" %>

<h1>Edit Vehicle</h1>

<form action="/inv/edit/<%= vehicle.inv_id %>" method="POST" class="form-grid">

  <% if (errors.length > 0) { %>
    <div class="form-errors">
      <% errors.forEach(error => { %>
        <p><%= error.msg %></p>
      <% }) %>
    </div>
  <% } %>

  <label>Make</label>
  <input type="text" name="inv_make" value="<%= vehicle.inv_make %>" required>

  <label>Model</label>
  <input type="text" name="inv_model" value="<%= vehicle.inv_model %>" required>

  <label>Year</label>
  <input type="number" name="inv_year" value="<%= vehicle.inv_year %>" required>

  <label>Miles</label>
  <input type="number" name="inv_miles" value="<%= vehicle.inv_miles %>" required>

  <label>Price</label>
  <input type="number" step="0.01" name="inv_price" value="<%= vehicle.inv_price %>" required>

  <label>Color</label>
  <input type="text" name="inv_color" value="<%= vehicle.inv_color %>" required>

  <label>Description</label>
  <textarea name="inv_description" required><%= vehicle.inv_description %></textarea>

  <label>Image URL</label>
  <input type="text" name="inv_image" value="<%= vehicle.inv_image %>" required>

  <label>Thumbnail</label>
  <input type="text" name="inv_thumbnail" value="<%= vehicle.inv_thumbnail %>" required>

  <label>Classification</label>
  <select name="classification_id" required>
    <% classifications.forEach(c => { %>
      <option value="<%= c.classification_id %>" <%= c.classification_id == vehicle.classification_id ? 'selected' : '' %>>
        <%= c.classification_name %>
      </option>
    <% }) %>
  </select>

  <button type="submit">Update Vehicle</button>
</form>
