<% title = "Inventory Maintenance" %>

<h1>Inventory Maintenance</h1>

<ul>
  <li><a href="/inventory/add">Add New Vehicle</a></li>
  <li><a href="/classification/add">Add Vehicle Classification</a></li>
</ul>

<h2>Edit Existing Vehicles</h2>

<% if (vehicles.length === 0) { %>
  <p>No vehicles found.</p>
<% } else { %>
  <ul>
    <% vehicles.forEach(vehicle => { %>
      <li>
        <%= vehicle.inv_make %> <%= vehicle.inv_model %> - $<%= vehicle.inv_price %>
        <a href="/inventory/edit/<%= vehicle.inv_id %>">Edit</a>
        <form action="/inventory/delete/<%= vehicle.inv_id %>" method="POST" style="display:inline;">
          <button type="submit" onclick="return confirm('Are you sure you want to delete this vehicle?');">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
<% } %>
